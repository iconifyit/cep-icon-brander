<?xml version='1.0' encoding='UTF-8'?>
<ExtensionManifest
        ExtensionBundleId="com.atomic.icon-brander"
        ExtensionBundleVersion="1.0.0"
        Version="7.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <ExtensionList>
        <Extension Id="com.atomic.icon-brander.panel" Version="1.0.0" />
    </ExtensionList>
    <ExecutionEnvironment>
        <HostList>
            <Host Name="ILST" Version="19" />
        </HostList>
        <LocaleList>
            <Locale Code="All" />
        </LocaleList>
        <RequiredRuntimeList>
            <RequiredRuntime Name="CSXS" Version="9.0" />
        </RequiredRuntimeList>
    </ExecutionEnvironment>
    <DispatchInfoList>
        <Extension Id="com.atomic.icon-brander.panel">
            <DispatchInfo>
                <Resources>
                    <MainPath>./client/index.html</MainPath>
                    <CEFCommandLine>
                        <Parameter>--enable-nodejs</Parameter>
                        <Parameter>--mixed-context</Parameter>
                    </CEFCommandLine>
                </Resources>
                <Lifecycle>
                    <AutoVisible>true</AutoVisible>
                </Lifecycle>
                <UI>
                    <Type>Panel</Type>
                    <Menu>Icon Brander</Menu>
                    <Geometry>
                        <Size>
                            <Height>140</Height>
                            <Width>240</Width>
                        </Size>
                        <MaxSize>
                            <Height>140</Height>
                            <Width>240</Width>
                        </MaxSize>
                        <MinSize>
                            <Height>140</Height>
                            <Width>240</Width>
                        </MinSize>
                    </Geometry>
                    <Icons>
                        <Icon Type="Normal">./skull.png</Icon>
                        <Icon Type="RollOver">./skull.png</Icon>
                        <Icon Type="DarkNormal">./skull.png</Icon>
                        <Icon Type="DarkRollOver">./skull.png</Icon>
                    </Icons>
                </UI>
            </DispatchInfo>
        </Extension>
    </DispatchInfoList>
</ExtensionManifest>
